{
    "version": 3,
    "configurePresets": [
      {
        "name": "linux-base",      
        "hidden": true,
        "binaryDir": "${sourceDir}/build/",
        "installDir": "${sourceDir}/install/",
        "condition": {
          "type": "equals",
          "lhs": "${hostSystemName}",
          "rhs": "Linux"
        },
        "cacheVariables": {                
            "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",          
            "CMAKE_CXX_COMPILER": "g++"
        }
      },
      {
        "name": "x64-debug-linux",
        "displayName": "x64 Debug Linux",
        "inherits": "linux-base",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Debug"
        }
      },
      {
        "name": "x64-release-linux",
        "displayName": "x64 Release Linux",
        "inherits": "linux-base",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Release"
        }
      },
      {
        "name": "x64-debug-linux-BT",
        "displayName": "x64 Debug Linux BT",
        "inherits": "x64-debug-linux",
        "cacheVariables": {
            "DP_EXPORT_BUILD_TREE": "ON"
        }
      },
      {
        "name": "x64-release-linux-BT",
        "displayName": "x64 Release Linux BT",
        "inherits": "x64-release-linux",
        "cacheVariables": {
            "DP_EXPORT_BUILD_TREE": "ON"
        }
      },
      {
        "name": "windows-base",
        "hidden": true,
        "binaryDir": "${sourceDir}/build/",
        "installDir": "${sourceDir}/install/",
        "condition": {
          "type": "equals",
          "lhs": "${hostSystemName}",
          "rhs": "Windows"
        },
        "cacheVariables": {
            "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "CMAKE_CXX_COMPILER": "cl.exe",
            "COA_BUILD_TESTS": "ON"
        }
      },
      {
        "name": "x64-debug-windows",      
        "displayName": "x64 Debug Windows",
        "inherits": "windows-base",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Debug"
        }
      },
      {
        "name": "x64-release-windows",      
        "displayName": "x64 Release Windows",
        "inherits": "windows-base",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Release"
        }
      }
    ],
    "buildPresets": [
      {
        "name": "default-debug",
        "configurePreset": "x64-debug-linux"
      },
      {
        "name": "default-release",
        "configurePreset": "x64-release-linux"
      },
      {
        "name": "default-debug-BT",
        "configurePreset": "x64-debug-linux-BT"
      },
      {
        "name": "default-release-BT",
        "configurePreset": "x64-release-linux-BT"
      },
      {
        "name": "default-debug-win",
        "configurePreset": "x64-debug-windows"
      },
      {
        "name": "default-release-win",
        "configurePreset": "x64-release-windows"
      }
    ]
    }